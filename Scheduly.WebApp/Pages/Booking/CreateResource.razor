@page "/Booking/ResourceDetails/{CategoryId:int}/CreateResource";
@inherits CreateResourceBase;
@attribute [Authorize(Roles = "Administrator")]

<h3>Create Resource</h3>

<MudItem xs="12" Class="d-flex mud-width-full py-2">
    <BackButton />
</MudItem>

<MudPaper Class="pa-4">
    <MudForm>
        <MudTextField @bind-Value="ResourceName" Immediate="true" Label="Resource name" />
        <MudTextField @bind-Value="ResourceDescription" Immediate="true" Label="Description" />
        <MudNumericField @bind-Value="ResourceAmount" Immediate="true" Label="Amount" />
        <MudCheckBox @bind-Value="MustBeApproved" Label="Must Be Approved" />
    </MudForm>
    <MudCardActions Class="pt-4">
        <MudButton Variant="Variant.Filled" @onclick="CreateNewResource">Create</MudButton>
    </MudCardActions>
</MudPaper>
