@page "/AdminPanel/ApproveAbsence";
@inherits ApproveAbsenceBase;
@using Scheduly.WebApi.Models.DTO;
@attribute [Authorize(Roles = "Administrator")]

<h3>Approve Absence</h3>

<MudItem xs="12" Class="d-flex mud-width-full">
    <BackButton />
</MudItem>

<MudDataGrid T="ApproveAbsenceDTO" Items="@AllAbsence" Virtualize="true" Height="auto">
	<Columns>
		<PropertyColumn Property="x => x.AbsenceId" />
		<PropertyColumn Property="x => x.UserId" />
		<PropertyColumn Property="x => x.Username" />
		<PropertyColumn Property="x => x.AbsenceTypeName" />
		<PropertyColumn Property="x => x.Start" />
		<PropertyColumn Property="x => x.End" />
		<PropertyColumn Property="x => x.Description" />
		<PropertyColumn Property="x => x.Approved" />
		<TemplateColumn CellClass="d-flex justify-end">
			<CellTemplate>
				<MudStack Row>
					<MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Success">Approve</MudButton>
					<MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Error">Disapprove</MudButton>
					<MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary" Href="@("/AdminPanel/ApproveAbsence/AbsenceDetails")">Details</MudButton>
				</MudStack>
			</CellTemplate>
		</TemplateColumn>
	</Columns>
	<LoadingContent>
		<MudText Typo="Typo.h6">Loading...</MudText>
	</LoadingContent>
	<NoRecordsContent>
		No data available
	</NoRecordsContent>
</MudDataGrid>
