@page "/AdminPanel/ApproveAbsence/AbsenceDetails/{AbsenceId:int}";
@inherits ApproveAbsenceDetailsBase;

<h3>GETNAMEOFABSCENCE</h3>

<MudItem xs="12" Class="d-flex mud-width-full">
    <BackButton />
</MudItem>

<MudPaper Class="pa-4" Width="500px">
	<MudForm Model="@model">
		<MudTextField Label="Username" InputType="InputType.Text" @bind-Value="model.Username" Variant="Variant.Outlined" />
		<MudTextField Label="AbsenceType" InputType="InputType.Text" @bind-Value="model.AbsenceTypeName" Variant="Variant.Outlined" />
		<MudTextField Label="Start" InputType="InputType.Text" @bind-Value="model.Start" Variant="Variant.Outlined" />
		<MudTextField Label="End" InputType="InputType.Text" @bind-Value="model.End" Variant="Variant.Outlined" />
		<MudTextField Label="Description" InputType="InputType.Telephone" @bind-Value="model.Description" Variant="Variant.Outlined" />
		<MudTextField Label="Approved" InputType="InputType.Telephone" @bind-Value="model.Approved" Variant="Variant.Outlined" />

		<MudStack Row>
			<MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Success" @onclick="(() => ApproveAbsence(model.AbsenceId))">Approve</MudButton>
			<MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Error" @onclick="(() => DisApproveAbsence(model.AbsenceId))">Disapprove</MudButton>
		</MudStack>
	</MudForm>
</MudPaper>
